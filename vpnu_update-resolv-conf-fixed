#!/bin/bash
#
# Parses DHCP options from openvpn to update systemd-resolved
# FIXED VERSION for systemd-resolved (no iptables redirection)
#
# To use set as 'up' and 'down' script in your openvpn *.conf:
# up /usr/sbin/vpnu_update-resolv-conf
# down /usr/sbin/vpnu_update-resolv-conf
#

[ "$script_type" ] || exit 0
[ "$dev" ] || exit 0

split_into_parts()
{
	part1="$1"
	part2="$2"
	part3="$3"
}

case "$script_type" in
  up)
	NMSRVRS=""
	SRCHS=""
	for optionvarname in ${!foreign_option_*} ; do
		option="${!optionvarname}"
		echo "$option"
		split_into_parts $option
		if [ "$part1" = "dhcp-option" ] ; then
			if [ "$part2" = "DNS" ] ; then
				NMSRVRS="${NMSRVRS:+$NMSRVRS }$part3"
			elif [ "$part2" = "DOMAIN" ] ; then
				SRCHS="${SRCHS:+$SRCHS }$part3"
			fi
		fi
	done

	# Use systemd-resolved instead of resolvconf
	if [ -n "$NMSRVRS" ]; then
		echo "Configuring DNS for $dev with servers: $NMSRVRS"

		# Set DNS servers for the VPN interface using resolvectl
		resolvectl dns "$dev" $NMSRVRS

		# Set search domains if provided
		if [ -n "$SRCHS" ]; then
			resolvectl domain "$dev" $SRCHS
		fi

		# Make this interface take routing priority for DNS
		resolvectl default-route "$dev" true

		echo "DNS configuration completed for $dev"
	fi
	;;

  down)
	echo "Removing DNS configuration for $dev"

	# Revert DNS settings for the interface
	resolvectl revert "$dev" 2>/dev/null || true

	echo "DNS configuration removed for $dev"
	;;
esac
